    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'snakes'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=snakes",
                    "--package=snakes"
                ],
                "filter": {
                    "name": "snakes",
                    "kind": "bin"
                }
            },
            "args": [
                "--config",
                "config.development.yaml"
            ],
            "env": {
                "CARGO_MANIFEST_DIR": "${workspaceFolder}"
            },
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'snakes'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=snakes",
                    "--package=snakes"
                ],
                "filter": {
                    "name": "snakes",
                    "kind": "bin"
                }
            },
            "args": [],
            "env": {
                "CARGO_MANIFEST_DIR": "${workspaceFolder}"
            },
            "cwd": "${workspaceFolder}"
        }
    ]
}